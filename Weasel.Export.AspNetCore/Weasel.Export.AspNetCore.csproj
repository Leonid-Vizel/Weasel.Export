<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>$(AssemblyName)</Title>
    <VersionPrefix>8.0.2</VersionPrefix>
    <Company>Vizel Leonid</Company>
    <Product>Weasel</Product>
    <Authors>Vizel Leonid</Authors>
    <Description>XLSX export controller extension for Asp.Net Core (Both MVC and Pages)</Description>
    <PackageReleaseNotes>Added support for Razor pages</PackageReleaseNotes>
    <PackageIcon>weasel.png</PackageIcon>
    <RepositoryType>git</RepositoryType>
    <PackageTags>Weasel Export Common ClosedXML Excel XLSX AspNetCore</PackageTags>
    <IncludeSymbols>True</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
    <RepositoryUrl>https://github.com/Leonid-Vizel/Weasel</RepositoryUrl>
    <PackageProjectUrl>https://github.com/Leonid-Vizel/Weasel</PackageProjectUrl>
    <Copyright>Leonid Vizel</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\weasel.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Core" Version="2.2.5" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.RazorPages" Version="2.2.5" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.ViewFeatures" Version="2.2.0" />
  </ItemGroup>

</Project>
